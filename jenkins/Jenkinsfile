pipeline {
    agent any
    environment {
        CI = "true"
    }
    stages {
        stage('Add Deps') {
             steps {
                // sh './jenkins/scripts/install-deps.sh'
                // sh 'npm install'
                bat 'npm install'
             }
        }
        stage('Test'){
            steps {
                bat 'npm run test'
            }
        }
        stage('Build'){
            steps {
                bat 'npm run build'
            }
        }
    }
}